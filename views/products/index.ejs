<!DOCTYPE html>
<html>

<head>
    <title>Beaver Wood Carvers</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <base href="/" />
    <link rel="stylesheet" href="assets/css/subpages.css" />
</head>

<body>
    <div class="page-wrap">
        <!-- Nav -->
        <nav id="nav">
            <ul>
                <li>
                    <a href="/" class="active"><span class="icon fa-home" title="Home"></span></a>
                </li>
                <li>
                    <a href="/auth/login"><span class="icon fa-sign-in" title="Log In"></span></a>
                </li>
                <li>
                    <a href="/auth/logout"><span class="icon fa-sign-out" title="Log Out"></span></a>
                </li>
                <li>
                    <a href="/auth/signup"><span class="icon fa-user-plus" title="Sign Up"></span></a>
                </li>
            </ul>
        </nav>

        <!-- Main -->
        <section id="main">
            <!-- Banner -->
            <section id="banner">
                <div class="inner">
                    <h1>Welcome to Beaver Wood Carvers</h1>
                    <p>
                        Specializing in custom designed signs
                    </p>
                </div>
            </section>

    <nav>
        <%if (userId ===1) {%>
      <a href="/products/new">Add a New Product</a>
    <% } %>
    </nav>
    <ul>
      <% products.forEach((product, index) => { %>

      <li>
        <a href="/products/<%=product.id%>"><%=product.productName%> </a>
        <br> </br>
            <%=product.productDescription%>
        
        <br> </br>
        <%=product.productCategory%>
      
      <img src="<%=product.img%>" alt="" />
    </li>

<%if (userId ===1) {%>
        <form action="/products/edit<%=product.id%>">
            <input type="submit" value="Edit" />
        </form>
    <form action="/products/<%=product.id%>?_method=DELETE" method="POST">
        <input type="submit" value="Delete" />
    </form>
      <% } %>
    <% }) %>
    </ul>


  </body>
</html>
